{
  "name": "alephium-mining-proxy",
  "version": "0.1.2",
  "description": "Alephium mining proxy",
  "homepage": "https://github.com/alephium/mining-proxy",
  "bugs": {
    "url": "https://github.com/alephium/mining-proxy"
  },
  "author": "alephium",
  "scripts": {
    "start": "node ./init.js",
    "build": "npx pkg . -C brotli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alephium/mining-proxy.git"
  },
  "dependencies": {
    "mini-blake3": "6.5.5",
    "bs58": "4.0.1",
    "bignumber.js": "9.0.2",
    "binary-parser": "2.0.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "pkg": {
    "scripts": "*.js",
    "assets": "node_modules/**/*",
    "outputPath": "bin",
    "targets": [ "node16-linux-x64", "node16-windows-x64", "node16-macos-x64" ]
  },
  "bin": {
    "proxy": "init.js"
  },
  "engines": {
    "node": ">=14"
  }
}
